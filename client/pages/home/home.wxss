@import "../../template/starsTemplate/starsTemplate.wxss";

/* 过滤条件样式控制  */
.filter-wrapper {
  height: 30px;
  white-space: nowrap;
  width: 100%;
}

.filter-wrapper .btn-area {
  position: absolute;
  display: flex;
  width: 100%;
  height: 100%;
}

.filter-wrapper .btn-area icon {
  margin-left: 10px;
  margin-top: 6px;
}

.filter-wrapper navigator {
  color: gray;
  display:inline-block;
  font-size: 17px;
  margin-left: 10px;
  text-align: center;
  vertical-align: middle;
}

/** 修改默认的navigator点击态 **/
.navigator-hover {
  color:blue;
}

/**设置轮播框样式**/
.swiper-wrapper {
  display: block;
  box-sizing: border-box;
  width: 100%;
}

.swiper-item{
  display: block;
}

/* 商品列表  */
.goods-list {
  margin-top: 5px;
}
.goods-list .title-price {
  margin: 0 5px;
}

.goods-list .title-price text {
  font-size: 17px;
}

.goods-list .goods-images {
  margin-left:5px;
}

.goods-list .weui-flex__item image {
  width:95%;
  height:100px;
}

.goods-list .goods-des {
  margin-left: 5px;
  margin-right: 5px;
  font-size: 15px;
}